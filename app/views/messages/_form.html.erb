<%= form_for(@message, html:{class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>+
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li>
              <%= full_message %>
            </li>
          <% end %> 
        </ul>
      </div>
    <% end %>

    <div class="form-group">
        <div class="col-xs-2">
            <%= f.label :name, "名前:", class: "control-label col-xs-offset-4" %>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
      <div class="col-xs-2">
        <%= f.label :body, "内容:", class: "control-label col-xs-offset-4" %>
      </div>
      <div class="col-xs-8">
        <%= f.text_area :body, class: "form-control",rows: "5"%>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-xs-2">
        <%= f.label :age, "年齢:", class: "control-label col-xs-offset-4" %>
      </div>
      <div class="col-xs-4">
          <%= f.number_field(:age, in: 0..100, class:"form-control" ) %>
      </div>
    </div>
      <%= f.submit class: "btn btn-sm btn-primary col-xs-offset-2" %>
<% end %>

