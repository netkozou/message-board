<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html:{class: "form-horizontal"}) do |f| %>
    <div class="form-group">
        <div class="col-xs-2">
            <%= f.label :name, "名前:", class: "control-label col-xs-offset-4" %>
        </div>
        <div class="col-md-8 col-sm-8 col-xs-8">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>

<div class="form-group">
  <div class="col-xs-2">
    <%= f.label :body, "内容:", class: "control-label col-xs-offset-4" %>
  </div>
  <div class="col-xs-8">
    <%= f.text_area :body, class: "form-control",rows: "5"%>
  </div>
</div>
  <%= f.submit class: "btn btn-sm btn-primary col-xs-offset-2" %>
  
<% end %>
     